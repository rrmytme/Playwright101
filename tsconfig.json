{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ES2021", "DOM"],
    "moduleResolution": "Node",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["pages/*"],
      "@utils/*": ["src/utils/*"],
      "@fixtures/*": ["fixtures/*"]
    },
    "strict": false, // make it true for stricter type-checking in production
    "esModuleInterop": true
  },
  "include": ["**/*.ts"]
}
